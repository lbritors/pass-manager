// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String

  @@map("users")
}

model Section {
  id Int @id @default(autoincrement())
  token String

  @@map("sections")
}

model Credential {
  id Int @id @default(autoincrement())
  title String @unique
  url String
  password String

  @@map("credentials")
}
model Note {
  id Int @id @default(autoincrement())
  title String @unique
  text String

  @@map("notes")
}

model Card {
  id Int @id @default(autoincrement())
  owner String
  number String
  cvc Int
  virtual Boolean
  expiration String
  password String
  type String

  @@map("cards") 
}